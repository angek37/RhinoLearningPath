@model SportsStore.Domain.Entities.Cart

<div class="navbar-nav ml-auto d-none d-sm-block">
    @Html.ActionLink("Checkout", "Index", "Cart",
        new { returnUrl = Request.Url.PathAndQuery },
        new { @class = "btn btn-secondary"})
</div>

<div class="navbar-nav ml-auto d-sm-none">
    <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })
       class="btn bg-secondary">
        <i class="fas fa-shopping-cart text-white"></i>
    </a>
</div>

<div class="navbar-text float-right text-white mx-2">
    <b class="d-none d-sm-block">Your cart:</b>
    @Model.Lines.Sum(x => x.Quantity) item(s),
    @Model.ComputeTotalValue().ToString("c")
</div>