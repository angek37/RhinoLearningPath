@model IEnumerable<string>

<div class="btn-group btn-group-sm d-flex">
    @Html.ActionLink("Home", "List", "Product", new { @class = "btn btn-secondary btn-sm w-100" })

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
       {
           controller = "Product",
           action = "List",
           category = link,
           page = 1
       }, new
       {
           @class = "btn btn-secondary btn-sm w-100" + (link == ViewBag.SelectedCategory ? "btn-primary" : "")
       })
    }
</div>